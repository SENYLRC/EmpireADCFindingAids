          <event>U.S. Congressman representing Ohio</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1861/1877">1861-1877</date>
          <event>U.S. Senator representing Ohio</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1877/1881">1877-1881</date>
          <event>U.S. Secretary of the Treasury under President Rutherford Hayes</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1880">1880</date>
          <event>Sought Republican Presidential nomination</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1881/1897">1881-1897</date>
          <event>U.S. Senator representing Ohio</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1890">1890</date>
          <event>Sherman Antitrust Act</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1897/1898">1897-1898</date>
          <event>U.S. Secretary of State under President William McKinley</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1900">1900</date>
          <event>Died in Washington, D.C. on October 22nd</event>
        </chronitem>
