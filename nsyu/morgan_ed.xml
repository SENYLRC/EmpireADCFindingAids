        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1856/1864">1856-1864</date>
          <event>Chairman of the Republican National Committee</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1859/1862">1859-1862</date>
          <event>New York State Governor</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1861/1863">1861-1863</date>
          <event>Major General of Volunteers in the Union Army</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1863/1869">1863-1869</date>
          <event>United States Senator</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1872/1876">1872-1876</date>
          <event>Chairman of the Republican National Committee</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1881">1881</date>
          <event>Declined nomination for Secretary of the Treasury by President Chester A. Arthur</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1883">1883</date>
