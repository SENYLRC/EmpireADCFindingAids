        <chronitem>
          <date calendar="gregorian" era="ce" normal="1811">1811</date>
          <event>Born in Washington, Massachusetts on February 8th</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1832">1832</date>
          <event>Member of the Hartford city council</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1849">1849</date>
          <event>Alderman of New York City</event>
        </chronitem>
        <chronitem>
          <date calendar="gregorian" era="ce" normal="1850/1855">1850-1855</date>
          <event>Member of the New York State Senate</event>
        </chronitem>
